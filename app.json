{
  "name": "GearTracker",
  "description": "A Python app to manage your gear and when to replace them.",
  "image": "heroku/python",
  "repository": "https://github.com/useEvil/gear-tracker",
  "keywords": ["python", "django" ],
  "addons": [ "heroku-postgresql" ],
  "env": {
    "SECRET_KEY": {
      "description": "The secret key for the Django application.",
      "generator": "secret"
    }
  },
  "environments": {
    "test": {
      "scripts": {
        "test-setup": "python manage.py collectstatic --noinput",
        "test": "python manage.py test"
      }
    }
  }
}
